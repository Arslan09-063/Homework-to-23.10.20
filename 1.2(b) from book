#include<iostream>
#include<cmath>
#include<climits>

using namespace std;

int main()
{
	int n, m, g, j, i;
	n = 40;
	double* z = new double[n];
	m = 10;
  double c;
	c = 0.6;
	a[0] = -0.50;
	a[1] = 1.80;
	for (i = 2; i <= n; i++){
	a[i] = (1 - a[i - 1]) / (1 + a[i - 2] * a[i - 2]) * sin(a[i - 1] * a[i - 1] + a[i - 1] * a[i - 2] + 2);
	a[i] = abs(a[i]);
		cout << "a[" << i << "] = " << a[i] << endl;
	}
	for (i = 1; i <= m; i++){
	//cout << "a " << endl;
		g = 0;
		for (j = 1; j < n; j++){
		if (a[j] >= (i - 1) * c && a[j] < i * c)
		g++;
		}
		cout << "g =" << g << endl;
	}
	return 0;
}
