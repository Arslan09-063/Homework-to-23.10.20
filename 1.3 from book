#include <iostream>
#include <cmath>

using namespace std;

int main()
{
	double E; //By condition
	double* a = new double[n + 1]; //By condition
	double* b = new double[n + 1]; //By condition
	cout << "Enter a0 ="; 
	cin >> a[0];
	cout << "enter b0"; 
	cin >> b[0];
	int N;
	cout << "Enter N  "; 
	cin >> N;
	cout<< " Enter E : ";
	cin >> E;

	for(int i=1;i<=n;i++)
	{
	if (a[i - 1] < 0)
		a[i] = pow(sin(a[i - 1] + b[i - 1]), 2);
	else
		a[i] = sin(1 + a[i - 1] * b[i - 1] - b[i - 1] * b[i - 1]);
		b[i] = 0.8 + 2 * sin(b[i - 1]) - 5.5 * sin(a[i - 1]) * sin(a[i - 1]);

	}

	for (int i = 1; i <= n; i++)
	{
	for(int j=1;j<=n;j++)
	{
		if (a[i] * a[i] - b[j] * b[j] < E)
		{
		cout << "a" << i << " =" << a[i];
		cout << endl;
		return 0;
		}
	}
	}
	return 0;
}
