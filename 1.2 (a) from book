#include<iostream>
#include<cmath>
#include<climits>

using namespace std;

int main()
{
	int n, g, m, j, i;
	double c;
	n = 30;
	double* z = new double[n];
	m = 10;
	c = 0.5;
	a[0] = 0;
	a[1] = -1.02;
	for (i = 2; i <= n; i++){
	a[i] = (1 - a[i - 1]) / (1 + a[i - 2] * z[i - 2]) * sin(a[i - 1] * a[i - 1] + a[i - 1] * a[i - 2] + 2);
	cout << "z[" << i << "] = " << z[i] << endl;
	}
	for (i = 1; i <= m; i++){
	   g = 0;
	for (j = 1; j < n; j++){
	if (a[j] >= (i - 1) * c && a[j] < i * c)
	   g++;
		}
		cout << "g =" << g << endl;
	}
	return 0;
}
